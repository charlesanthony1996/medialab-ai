{
    "name": "Hate Speech Application Extension",
    "version": "1.0.0",
    "description": "This is an extension to detect and counter hate speech for a social media platform",
    "manifest_version": 3,
    "author": "Charles Anthony",
    "action": {
        "default_popup": "index.html",
        "default_title": "Hate Speech Application Extension"
    },
    "permissions": ["tabs", "activeTab"],
    "content_scripts": [
        {
          "matches": ["*://*.youtube.com/*"],
          "js": ["contentScript.js"]
        }
      ],      
    "host_permissions": [
        "*://*.youtube.com/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "background": {
        "service_worker": "background.js"
    }
}